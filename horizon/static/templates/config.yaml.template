services:
  permit_io:
    url: {{ cloud_service_url }}
    {% if bearer_token %}
    credentials:
      bearer:
        token: "{{ bearer_token }}"
    {% endif %}
{% if decision_logs_enabled %}
decision_logs:
  {% if log_to_console %}
  console: true
  {% endif %}
  service: permit_io
  resource: {{ log_ingress_endpoint }}
  reporting:
    min_delay_seconds: {{ min_delay_seconds }}
    max_delay_seconds: {{ max_delay_seconds }}
    upload_size_limit_bytes: {{ upload_size_limit_bytes }}
{% endif %}

{% if plugins %}
plugins:
{% for plugin_id, plugin_config in plugins.items() %}
  {{ plugin_id }}:
    {% for config_key, config_value in plugin_config.items() %}
    {{ config_key }}: {{ config_value }}
    {% endfor %}
{% endfor %}
{% endif %}
